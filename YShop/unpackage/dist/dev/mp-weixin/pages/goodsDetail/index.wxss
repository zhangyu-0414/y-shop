.goodsDetail {
  background-color: #eee;
}
.goodsDetail swiper {
  height: 700rpx;
}
.goodsDetail swiper image {
  width: 100%;
  height: 100%;
}
.goodsDetail .info {
  width: 100%;
  height: 100rpx;
  border: 1px soid #fff;
  background-color: #fff;
  padding: 20px 15px;
}
.goodsDetail .info .price {
  font-size: 40rpx;
}
.goodsDetail .info .price text:nth-child(2) {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #C0C0C0;
  text-decoration: line-through;
}
.goodsDetail .info .price .tit {
  font-size: 35rpx;
}
.goodsDetail .goodsInfo {
  width: 100%;
  height: 90rpx;
  margin-top: 10rpx;
  line-height: 50rpx;
  border: 1px soid #fff;
  background-color: #fff;
  padding: 5px 15px;
}
.goodsDetail .content {
  width: 100%;
  margin-top: 10rpx;
  border: 1px soid #fff;
  background-color: #fff;
  box-sizing: border-box;
  padding-bottom: 50rpx ;
  line-height: 70rpx;
}
.goodsDetail .content .contentTit {
  font-size: 40rpx;
}
.goodsDetail .gomeImgLoad {
  width: 750rpx;
  height: auto;
}
.goodsDetail .goods-carts {
  position: fixed;
  bottom: 0;
  width: 100%;
}

